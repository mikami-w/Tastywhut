.scrollarea{
  width:100%;
  height:80%;
}
.searchbox{
  display: flex;
  flex-flow: column;
  width:100%;
  height:auto;
}
.top-box{
  width:100%;
  height:100rpx;
}
.search-box{
  position: relative;
  margin:15rpx 18rpx 20rpx 22rpx;
  display:flex;
}
.search-icon{
  z-index: 999;
  width:1rpx;
  height:35rpx;
  top:17rpx;
  left: 25rpx;
}
.search-icon image{
  z-index: 999;
  
  width:44rpx;
  height:44rpx;
  /* background:no-repeat; */
}
.input-placeholder{
  font-size: 38rpx;
  font-family:PingFang SC;
  font-weight: 400;
  color:#727272;
  line-height:52rpx;
  opacity: 0.6;
}
.search-input{
  width:710rpx;
  height:75rpx;
  background: #ffffff;
  border-radius: 30rpx;
  line-height: 75rpx;
  padding-left: 77rpx;
  box-sizing: border-box;
}
.noshop{
  text-align: center;
  padding-top: 20rpx;
}
.shop-item {
  display: flex;
  /* 添加边框 */
  padding: 20rpx;
  border: 1rpx solid #efefef;
  /* 圆角样式 */
  border-radius: 10rpx;
  margin: 20rpx;
  /* 盒子阴影 */
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.listcontainer{
  display: flex;
  padding:5rpx;
}
.left-thumb image {
  width: 250rpx;
  height: 250rpx;
  display: block;
  margin-right: 20rpx;
  border-radius: 3px;
}
.right-info{
  display: flex;
  /* 纵向布局 */
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}
.shop-title{
  /* 文本加粗 */
  font-weight: bold;
  font-size: 28rpx;
}
.starsloc{
  display: flex;
}