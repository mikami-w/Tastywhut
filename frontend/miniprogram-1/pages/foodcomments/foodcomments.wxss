/* pages/foodcomments/foodcomments.wxss */
.scrollarea{
  width:100%;
  height:82%;
}
.topcontainer{
  display: flex;
  height:300rpx;
  padding: 20rpx;
  border: 1rpx solid #efefef;
  /* 圆角样式 */
  border-radius: 10rpx;
  margin: 20rpx;
  /* 盒子阴影 */
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.topcontainer image{
  height: 260rpx;
  width:260rpx;
  display: block;
  border-radius: 3px;
}
.topcontainer text{
  margin-left:30rpx;
  font-weight: bold;
  font-size:larger;
}
.topcontent{
  height:260rpx;
  
}
.commentlist{
  display: flex;
  /* 添加边框 */
  padding: 15rpx 20rpx 10rpx 20rpx;
  border: 1rpx solid #efefef;
  /* 圆角样式 */
  border-radius: 10rpx;
  margin: 20rpx;
  /* 盒子阴影 */
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.userphoto image{
  width: 75rpx;
  height: 75rpx;
  display: block;
  /* margin-right: 20rpx; */
  display: block;
}
.right-info{
  margin-left:30rpx;
  width:550rpx;
  display: flex;
  /* 纵向布局 */
  flex-direction: column;
  justify-content: space-around;
  font-size: 26rpx;
}
.starcontainer{
  margin-right: 10rpx;
  width:auto;
  display:flex;
  padding-right:10rpx;
  margin-top:5rpx;
}
.letmesay{
  position:fixed;
  bottom:0;
  height:120rpx;
  width:100%;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
  background-color: white;
  /* border-top: 0.5px solid gray; */
  display:flex;
}
.letmesay image{
  height: 64rpx;
  width:64rpx;
}