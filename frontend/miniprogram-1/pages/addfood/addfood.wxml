<navigation-bar wx:if="{{show}}" title="添加店铺" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<scroll-view  scroll-y class="scrollarea" type="list">
<view wx:if="{{show}}" class="container">

  <form bindsubmit="submitmsg" class="formcontainer">
    <button class="image-wrapper" bind:tap="chooseimg">
          <image class="image" src="{{shopimage}}"></image>
    </button>
    <view class="namecontainer">
    <text style="width:140rpx;margin-top:15rpx;font-size: larger;font-weight: bolder;">店铺名称</text>
    <input class="nameinput" name="shopname" value="{{shopname}}" auto-focus placeholder="店铺名称"/>
    </view>
    <view class="namecontainer">
    <text style="width:140rpx;margin-top:15rpx;font-size: larger;font-weight: bolder;">店铺电话</text>
    <input class="nameinput" name="shopphone" type="number" value="{{shopphone}}" auto-focus placeholder="店铺电话"/>
    </view>
    <view class="namecontainer">
    <text style="width:140rpx;margin-top:15rpx;font-size: larger;font-weight: bolder;">店铺地址</text>
    <input class="nameinput" name="shopaddress" value="{{shopaddress}}" auto-focus placeholder="店铺地址"/>
    </view>
    <picker bindchange="bindPickerChange_1" value="{{locnum}}" range="{{location}}" name="{{locnum}}">
    <view class="picker">
      分类：{{location[locnum]}}
    </view>
  </picker>
  <picker bindchange="bindPickerChange_2" mode="time" name="opentime">
    <view class="picker">
      营业时间：{{opentime}}
    </view>
  </picker>
  <picker bindchange="bindPickerChange_3" mode="time" name="closetime">
    <view class="picker">
      打烊时间：{{closetime}}
    </view>
  </picker>
  <view style="margin-top: 15rpx;">
    <label>
      <checkbox checked="{{hasauthor}}" bind:tap="checkboxchanged">
      <view style="text-align: center; display: flex;">
      <text>同意</text>
      <navigator style="width:180rpx;color:blue;" url="/pages/useragreement/useragreement">用户协议</navigator>
      <text>和</text>
      <navigator style="width:180rpx;color:blue;" url="/pages/privacypolicy/privacypolicy">隐私协议</navigator>
      </view>
      </checkbox>
    </label>
    
  </view>
    <button form-type="submit" class="sendbutton"   style="width:200rpx;margin-left: 420rpx;">提交</button>
    
    </form>
</view>
</scroll-view>